@model IEnumerable<HopLucAdmin.Models.NhanVienBH>
    @{
        ViewBag.Title = "TTNhanVien";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    <div id="page-wrapper">
        <div id="page-inner">
            <h2>TTNhanVien</h2>
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <ul class="nav nav-tabs">
                                <li class="col-md-4 li_txt active">
                                    <a href="#home" data-toggle="tab">Quản lý nhân viên</a>
                                </li>
                                <li class="col-md-4 li_txt ">
                                    <a href="#profile" data-toggle="tab">Thêm</a>
                                </li>
                                <li class="col-md-4 li_txt ">
                                    <a href="#messages" data-toggle="tab">Cập nhật</a>
                                </li>
                            </ul>
                        </div>
                        <div class="tab-content">
                            <div class="tab-pane fade active in" id="home">
                                <div class="row">
                                    <div class="col-md-12">
                                        <!-- Advanced Tables -->
                                            <div class="panel panel-default marginT15">
                                                <div class="panel-heading">
                                                    Thông tin nhân viên
                                                </div>
                                                <div class="panel-body">
                                                    <div class="table-responsive">
                                                        <table class="table table-striped table-bordered table-hover">
                                                            <thead>
                                                                <tr>
                                                                    <th>Mã Nhân Viên</th>
                                                                    <th>Tên Nhân Viên</th>
                                                                    <th>Địa Chỉ</th>
                                                                    <th>Số Điện Thoại</th>
                                                                    <th>Email</th>
                                                                </tr>
                                                            </thead>
                                                            @foreach (var n in Model)
                                                            { 
                                                            <tbody>
                                                                <tr class="odd gradeX">
                                                                    <td>@n.ID_NV</td>
                                                                    <td>@n.Ten_NV</td>
                                                                    <td>@n.Dia_Chi_NV</td>
                                                                    <td class="center">@n.SDT_NV</td>
                                                                    <td class="center">@n.Email_NV</td>
                                                                </tr>
                                                            </tbody>
                                                            }
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                    </div>
                                </div>
                            </div>
                            <!--End tab TTNhanVien-->
                            <div class="tab-pane fade" id="profile">
                                <div class="panel panel-default marginT15">
                                    <div class="panel-heading">
                                        Thêm nhân viên mới
                                    </div>
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="cod-md-6">
                                                <h3>Bảng thêm</h3>
                                                @Html.ValidationSummary(true)
                                                <form role="form">
                                                    <div class="form-group input-group">
                                                        <label>Tên nhân viên</label>
                                                        <input type="text" name="txtTen" class="form-control" placeholder="Tên"  />
                                                    </div>
                                                    <div class="form-group input-group">
                                                        <label>Địa chỉ</label>
                                                        <input type="text" name="txtDiaChi" class="form-control" placeholder="Địa chỉ"  />
                                                    </div>
                                                    <div class="form-group input-group">
                                                        <label>Số điện thoại</label>
                                                        <input type="tel" name="txtSDT" class="form-control" placeholder="Số điện thoại"  />
                                                    </div>
                                                    <div class="form-group input-group">
                                                        <label>Email</label>
                                                        <input type="email" name="txtEmail" class="form-control" placeholder="Email" />
                                                    </div>
                                                    <button type="reset" class="btn btn-primary">Thêm</button>
                                                </form>                                             
                                            </div>     
                                        </div>
                                    </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


